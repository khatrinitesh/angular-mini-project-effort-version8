{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "types": [],
    "noImplicitAny": false,
    "outDir": "dist/npm"
  },
  "files": [
    "src/main.ts",
    "typings/index.d.ts"
  ],
  "filesGlob": [
    "src/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "ignoreDiagnostics": [
    2403,
    2300,
    2374,
    2375
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": false
  }
}
