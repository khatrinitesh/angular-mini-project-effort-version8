{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "types": [],
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": ["es2015", "dom"],
    "outDir": "dist/es"
  },
  "files": [
    "src/main.ts",
    "typings/globals/jasmine/index.d.ts"
  ],
  "filesGlob": [
    "src/*.ts"
  ],
  "ignoreDiagnostics": [
    2403,
    2300,
    2374,
    2375
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": false
  }
}
